[Unit]
Description=Redis In-Memory Data Store
After=network.target

[Service]
Type=forking
PIDFile={{ redis_confs.pidfile }}

RuntimeDirectory=redis

User={{ redis_user }}
Group={{ redis_group }}

ExecStart={{ redis_conf_path }}/instance-manager.sh start
ExecStop={{ redis_conf_path }}/instance-manager.sh stop
Restart=always

[Install]
WantedBy=multi-user.target
