#!/bin/bash

# Settings
PORT={{ redis_conf.port }}
TIMEOUT={{ redis_cluster_timeout }}
NODES={{ redis_cluster_num_nodes }}
REDIS_SCRIPT_PATH={{ redis_install_path }}/src
REPLICAS={{ redis_cluster_replicas }}

# Computed vars
ENDPORT=$((PORT+NODES))

start() {
    echo "Starting $PORT"
    redis-server --port $PORT --appendonly yes --appendfilename appendonly-${PORT}.aof --dbfilename dump-${PORT}.rdb --logfile ${PORT}.log --daemonize yes
    exit 0
}

stop() {

        echo "Stopping $PORT"
        redis-cli -p $PORT shutdown nosave
    exit 0
}

tail() {
    PORT=$PORT
    tail -f ${PORT}.log
    exit 0
}

clean() {
    rm -rf *.log
    rm -rf appendonly*.aof
    rm -rf dump*.rdb
    rm -rf nodes*.conf
    exit 0
}

clean_logs() {
    rm -rf *.log
    exit 0
}

declare -A operations
operations[start]=start
operations[stop]=stop
operations[tail]=tail
operations[clean]=clean
operations[clean_logs]=clean_logs

${operations[$1]}

echo "Usage: $0 [start|create|stop|watch|tail|clean]"
echo "start       -- Launch Redis Cluster instances."
echo "stop        -- Stop Redis Cluster instances."
echo "tail  -- Run tail -f of instance at base port + ID."
echo "clean       -- Remove all instances data, logs, configs."
echo "clean-logs  -- Remove just instances logs."